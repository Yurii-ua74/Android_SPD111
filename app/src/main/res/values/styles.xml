<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="calc_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="calc_func_btn" parent="calc_btn">
        <item name="android:background">@drawable/calc_func_btn</item>
    </style>
    <style name="calc_digit_btn" parent="calc_btn">
        <item name="android:background">@drawable/calc_digit_btn</item>
    </style>
    <style name="calc_equal_btn" parent="calc_btn">
        <item name="android:background">@drawable/calc_equal_btn</item>
    </style>
    <style name="calc_memory_btn" parent="calc_btn">
        <item name="android:background">@drawable/calc_memory_btn</item>
    </style>

    <!-- Стиль для своїх повідомлень -->
    <style name="chat_message_my" parent="calc_btn">
        <item name="android:background">#E1FFC7</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Стиль для повідомлень інших авторів -->
    <style name="chat_message_other">
        <item name="android:background">#FFCDD2</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>